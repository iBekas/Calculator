<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/bottom_1"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/aspect_ratio"
        android:text="@string/buttom_1"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size"
        android:background="@drawable/button_bg_transparent"
        android:layout_margin="5dp"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintBottom_toTopOf="@+id/bottom_4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintVertical_bias="0.6"/>

    <Button
        android:id="@+id/bottom_4"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/aspect_ratio"
        android:text="@string/button_4"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size"
        android:background="@drawable/button_bg_transparent"
        android:layout_margin="5dp"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintBottom_toTopOf="@+id/bottom_7"
        app:layout_constraintTop_toBottomOf="@+id/bottom_1"
        app:layout_constraintStart_toStartOf="parent"
/>

    <Button
        android:id="@+id/bottom_7"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/aspect_ratio"
        android:text="@string/buttom_7"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size"
        android:background="@drawable/button_bg_transparent"
        android:layout_margin="5dp"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintBottom_toTopOf="@+id/bottom_."
        app:layout_constraintTop_toBottomOf="@+id/bottom_4"
        app:layout_constraintStart_toStartOf="parent"
/>

    <Button
        android:id="@+id/bottom_."
        android:layout_width="wrap_content"
        android:layout_height="@dimen/aspect_ratio"
        android:text="@string/buttom_dot"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size"
        android:background="@drawable/button_bg_transparent"
        android:layout_margin="5dp"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bottom_7"
        app:layout_constraintStart_toStartOf="parent"
/>


</androidx.constraintlayout.widget.ConstraintLayout>