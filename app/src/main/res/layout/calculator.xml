<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/bottom_1"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/aspect_ratio"
        android:text="@string/buttom_1"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size"
        app:layout_constraintBottom_toTopOf=""
        app:layout_constraintDimensionRatio="h,1:1" />

    <Button
        android:id="@+id/bottom_4"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/aspect_ratio"
        android:text="@string/button_4"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size"
        app:layout_constraintDimensionRatio="h,1:1" />

    <Button
        android:id="@+id/bottom_7"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/aspect_ratio"
        android:text="@string/buttom_7"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size"
        app:layout_constraintDimensionRatio="h,1:1" />

    <Button
        android:id="@+id/bottom_."
        android:layout_width="wrap_content"
        android:layout_height="@dimen/aspect_ratio"
        android:text="@string/buttom_dot"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size"
        app:layout_constraintDimensionRatio="h,1:1" />

</androidx.constraintlayout.widget.ConstraintLayout>